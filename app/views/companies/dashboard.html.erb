              <% Company.where(is_main_company: true).each do |c| 
                  checked = false
                  if current_company.main_company_ids.include? c.id
                    checked = true
                  end 
              %>
                <li>
                  <%= check_box_tag c.fake_name, disabled: true, checked: checked %>
                  <%= c.fake_name %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="notice warning"><%= t :company_not_confirmed %></div>
